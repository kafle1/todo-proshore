# Database configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=todo_db

# JWT secret for authentication
JWT_SECRET=your_jwt_secret

# Token expiration (in seconds)
ACCESS_TOKEN_EXPIRES_IN=900            # 15 minutes
REFRESH_TOKEN_EXPIRES_IN=2592000      # 30 days
RESET_PASSWORD_EXPIRES_IN=3600        # 1 hour

# Frontend URL for password reset links and CORS
FRONTEND_URL=http://localhost:5173

# Mail configuration for password reset emails
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=user@example.com
MAIL_PASS=password
MAIL_FROM="Todo App <no-reply@example.com>"

# Google OAuth credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
